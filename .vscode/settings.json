{
    // NOTE: E501=一行当たりの文字数制限があるが、ruffと言うツールでチェックしているので、flake8では無視する
    "flake8.args": ["--ignore=E501"],
    // NOTE: C0301=一行当たりの文字数制限があるが、ruffと言うツールでチェックしているので、pylintでは無視する
    "pylint.args": ["--disable=C0301"],
    "todo-tree.general.tags": [
        "CHANGED",
        "FIXME",
        "NOTE",
        "REVIEW",
        "TODO",
        "WARNING",
    ],
    "todo-tree.highlights.defaultHighlight": {
        "icon": "checklist",
        "type": "text",
        "fontWeight": "bold",
        "iconColour": "#2C7CFF",
    },
    "todo-tree.highlights.customHighlight": {
        "CHANGED": {
            "foreground": "#FF00FF",
        },
        "FIXME": {
            "foreground": "#00FF00",
        },
        "NOTE": {
            "foreground": "#C0C0C0",
        },
        "REVIEW": {
            "foreground": "#2C7CFF",
        },
        "TODO": {
            "foreground": "#FF5F17",
        },
        "WARNING": {
            "foreground": "#FF0000",
        },
    },
    "better-comments.tags": [
        {
            "tag": "CHANGED",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "#FF00FF",
        },
        {
            "tag": "FIXME",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "green",
        },
        {
            "tag": "NOTE",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "#C0C0C0",
        },
        {
            "tag": "REVIEW",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "#2C7CFF",
        },
        {
            "tag": "TODO",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "#FF5F17",
        },
        {
            "tag": "WARNING",
            "strikethrough": false,
            "backgroundColor": "transparent",
            "color": "red",
        },
    ],
}
